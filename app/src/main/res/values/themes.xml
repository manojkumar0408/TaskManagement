<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TimeSync" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="Theme.TimeSync.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TimeSync.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.TimeSync." parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/logo_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/logo_green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/logo_green</item>
    </style>

    <style name="blueTheme" parent="Base.Theme.TimeSync">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorPrimary">@color/deepBlue</item>
        <item name="colorPrimaryDark">@color/deepBlue</item>
        <item name="colorAccent">@color/deepBlue</item>
        <item name="android:statusBarColor">@color/deepBlue</item>
    </style>

    <style name="redTheme" parent="Base.Theme.TimeSync">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorPrimary">@color/LightRed</item>
        <item name="colorPrimaryDark">@color/deepRed</item>
        <item name="colorAccent">@color/MediumRed</item>
        <item name="android:statusBarColor">@color/LightRed</item>
    </style>

</resources>

